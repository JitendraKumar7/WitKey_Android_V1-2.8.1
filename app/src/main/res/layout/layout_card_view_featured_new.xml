<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mParentFrameFeatured"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/witkey_dim_white"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/userProfileViewParent_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/x10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mUserProfileImage_"
            android:layout_width="@dimen/x40dp"
            android:layout_height="@dimen/x40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_marginLeft="@dimen/x25dp"
            android:layout_marginStart="25dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_toRightOf="@+id/mUserProfileImage_"
            android:orientation="vertical">

            <app.witkey.live.utils.customviews.CustomTextView
                android:id="@+id/mUserNameTextView_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:singleLine="true"
                android:text="@string/featured_name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <app.witkey.live.utils.customviews.CustomTextView
                    android:id="@+id/mLastSeenTextView_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingRight="@dimen/x5dp"
                    android:text="@string/featured_hrs"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/x12dp" />


                <app.witkey.live.utils.customviews.CustomTextView
                    android:id="@+id/mViewsTextView_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingLeft="@dimen/x5dp"
                    android:text="@string/featured_views"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/x13dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x20dp"
        android:layout_marginLeft="@dimen/x20dp"
        android:layout_marginRight="@dimen/x20dp"
        android:layout_marginTop="@dimen/x20dp"
        android:padding="@dimen/x5dp"
        android:visibility="gone">

        <app.witkey.live.utils.customviews.CustomTextView
            android:id="@+id/mFeaturedCardTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/featured_text"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/x15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageParent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/x2dp"
        android:paddingTop="@dimen/x0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mFeaturedCardImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user_place_holder_square" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/userProfileViewParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/mUserProfileImage"
                        android:layout_width="@dimen/x30dp"
                        android:layout_height="@dimen/x30dp"
                        android:src="@drawable/user_place_holder_round" />

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:id="@+id/mUserNameTextView"
                        style="@style/ShadowTextTopSpender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5dp"
                        android:layout_marginRight="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="User Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/x1dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/x5dp"
                                    android:background="@drawable/button_rounded_corners">

                                    <app.witkey.live.utils.customviews.CustomTextView
                                        android:id="@+id/user_rank_TV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:drawablePadding="@dimen/x4dp"
                                        android:drawableRight="@drawable/star"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/x21dp"
                                        android:paddingRight="@dimen/x3dp"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/x10dp"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="@dimen/x18dp"
                                    android:layout_height="@dimen/x18dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/circle_fill_mic" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:id="@+id/stream_name_TV"
                        style="@style/ShadowTextTopSpender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5dp"
                        android:layout_marginRight="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Stream Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x15dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/showLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/equalizer"
                        android:layout_width="@dimen/x45dp"
                        android:layout_height="@dimen/x20dp"
                        android:src="@drawable/empty"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/liveStatusDot"
                        android:layout_width="@dimen/x8dp"
                        android:layout_height="@dimen/x8dp"
                        android:scaleType="center"
                        android:src="@drawable/orange_color_dot"
                        android:visibility="gone" />

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:id="@+id/liveStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x2dp"
                        android:gravity="center"
                        android:paddingLeft="@dimen/x2dp"
                        android:paddingRight="@dimen/x5dp"
                        android:text=""
                        android:textColor="@color/witkey_orange"
                        android:textSize="@dimen/x12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hourseAgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:background="@drawable/featured_two_round_corners">

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:id="@+id/mLastSeenTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3dp"
                        android:layout_marginLeft="@dimen/x5dp"
                        android:layout_marginRight="@dimen/x5dp"
                        android:layout_marginTop="@dimen/x3dp"
                        android:text="@string/featured_hrs"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x10dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/hourseAgo"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x3dp"
                    android:background="@drawable/featured_rounded_corners"
                    android:paddingBottom="@dimen/x3dp"
                    android:paddingLeft="@dimen/x7dp"
                    android:paddingRight="@dimen/x7dp"
                    android:paddingTop="@dimen/x3dp">

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:id="@+id/mViewsTextView"
                        style="@style/ShadowTextTopSpender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/featured_views"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x10dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>