<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/witkey_dim_white"
    android:orientation="vertical">

    <include
        android:id="@+id/includedLayout"
        layout="@layout/layout_message_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/emptyGreyView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30dp"
        android:background="@color/witkey_dim_silver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x15dp"
        android:layout_marginRight="@dimen/x15dp"
        android:layout_marginTop="@dimen/x2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/blockListParentFrame"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/blockListIV"
                android:layout_width="@dimen/x30dp"
                android:layout_height="@dimen/x30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_block_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/x10dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingTop="@dimen/x10dp"
                android:weightSum="2">

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical|left"
                    android:text="@string/block_list"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_dp"
            android:background="@color/witkey_orange" />

        <LinearLayout
            android:id="@+id/notificationsParentFrame"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notificationsIV"
                android:layout_width="@dimen/x30dp"
                android:layout_height="@dimen/x30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notifications" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/x10dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingTop="@dimen/x10dp"
                android:weightSum="2">

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical|left"
                    android:text="@string/notifications"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_dp"
            android:background="@color/witkey_orange" />

        <!--BY ASAD BAHI-->
        <LinearLayout
            android:id="@+id/clearCacheParentFrame"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/clearCacheIV"
                android:layout_width="@dimen/x30dp"
                android:layout_height="@dimen/x30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_clear_cache" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/x10dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingTop="@dimen/x10dp"
                android:weightSum="2">

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical|left"
                    android:text="@string/clear_cache"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!--BY ASAD BAHI-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_dp"
            android:background="@color/witkey_orange"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/feedbackParentFrame"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feedbackIV"
                android:layout_width="@dimen/x30dp"
                android:layout_height="@dimen/x30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_feedback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/x10dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingTop="@dimen/x10dp"
                android:weightSum="2">

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical|left"
                    android:text="@string/feedback"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_dp"
            android:background="@color/witkey_orange" />

        <LinearLayout
            android:id="@+id/aboutUsParentFrame"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/aboutUsIV"
                android:layout_width="@dimen/x30dp"
                android:layout_height="@dimen/x30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_about_us" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/x10dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingTop="@dimen/x10dp"
                android:weightSum="2">

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical|left"
                    android:text="@string/about_us_capital"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_dp"
            android:background="@color/witkey_orange" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x70dp"
            android:background="@drawable/button_large_rounded_corners"
            android:text="@string/log_out"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
