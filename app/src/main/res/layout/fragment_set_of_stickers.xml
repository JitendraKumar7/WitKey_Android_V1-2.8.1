<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/black"
    android:clickable="true">

    <ImageView
        android:id="@+id/userCancelImageView"
        android:layout_width="@dimen/x50dp"
        android:layout_height="@dimen/x50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x10dp"
        android:scaleType="center"
        android:src="@drawable/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x50dp"
            android:src="@drawable/bar" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stickersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x50dp" />
    </LinearLayout>
</RelativeLayout>
