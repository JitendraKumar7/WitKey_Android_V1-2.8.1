<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/toolbar_parent_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            android:background="@color/witkey_white"
            android:paddingLeft="@dimen/x10dp"
            android:paddingRight="@dimen/x10dp">

            <!--<ImageView-->
                <!--android:id="@+id/mToolbarTitleImage"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:padding="@dimen/x0dp"-->
                <!--android:src="@drawable/logo_main"-->
                <!--android:visibility="gone" />-->

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="@dimen/x40dp"
                android:layout_height="@dimen/x40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/x1dp"
                android:src="@drawable/ic_search" />

            <android.support.design.widget.TabLayout
                android:id="@+id/mHomeTabLayout"
                style="@style/HomeTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginRight="@dimen/x10dp"
                app:tabGravity="fill"
                app:tabIndicatorHeight="@dimen/x2dp"
                app:tabMaxWidth="@dimen/x0dp"
                app:tabMinWidth="@dimen/x0dp"
                app:tabMode="scrollable"
                app:tabPaddingEnd="5dp"
                app:tabPaddingStart="5dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="@dimen/x50dp"
                android:layout_height="@dimen/x40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/x1dp"
                android:background="@drawable/ic_ranking"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
