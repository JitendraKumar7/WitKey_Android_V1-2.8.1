<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_gravity="start|left"
    android:background="@drawable/dropdown_filter"
    android:orientation="vertical"
    android:padding="@dimen/x5dp">
    <!--Replace Linear Layout Image => Wrong image background is provided for profile_dropdown_bg_-->

    <app.witkey.live.utils.customviews.CustomTextView
        android:id="@+id/profileSettingOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:padding="@dimen/x5dp"
        android:text="@string/profile_settings"
        android:textSize="@dimen/x13dp" />

    <app.witkey.live.utils.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1dp"
        android:background="@color/witkey_orange" />

    <app.witkey.live.utils.customviews.CustomTextView
        android:id="@+id/systemSettingOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:padding="@dimen/x5dp"
        android:text="@string/system_settings"
        android:textSize="@dimen/x13dp" />

    <app.witkey.live.utils.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1dp"
        android:background="@color/grey_dark"
        android:visibility="gone" />


    <app.witkey.live.utils.customviews.CustomTextView
        android:id="@+id/mSaved"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/x10dp"
        android:text="option 3"
        android:textSize="@dimen/x15dp"
        android:visibility="gone" />

</LinearLayout>