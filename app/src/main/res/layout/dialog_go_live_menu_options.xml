<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30dp"
        android:layout_marginRight="@dimen/x30dp"
        android:layout_marginTop="@dimen/x20dp"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/option1DialogSwitchScreen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="center"
                    android:src="@drawable/go_live_menu_icon1" />

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="@string/switch_camera"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/option1DialogStickers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_weight="2"
                    android:src="@drawable/go_live_menu_icon2" />

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="@string/add_stickers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/option1DialogShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="center"
                    android:src="@drawable/go_live_menu_icon3" />

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="@string/share"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x8dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/option1DialogBeautyMood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="center"
                    android:src="@drawable/go_live_menu_icon4" />

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="@string/beauty_mode"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/option1DialogFluentQuality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_weight="2"
                    android:src="@drawable/go_live_menu_icon5" />

                <app.witkey.live.utils.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="@string/switch_quality"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>