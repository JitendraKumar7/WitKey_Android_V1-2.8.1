<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <app.witkey.live.utils.customviews.imagezoomview.ZoomageView
        android:id="@+id/imageViewZoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/place_holder_videos"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoCenter="true"
        app:zoomage_autoResetMode="ALWAYS"
        app:zoomage_maxScale="8"
        app:zoomage_minScale="0.6"
        app:zoomage_restrictBounds="true"
        app:zoomage_translatable="true"
        app:zoomage_zoomable="true" />

    <ImageView
        android:id="@+id/cancelBTN"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x10dp"
        android:layout_marginTop="@dimen/x20dp"
        android:scaleType="center"
        android:src="@drawable/ic_close_white_24dp"
        android:tint="@color/witkey_orange" />

    <ImageView
        android:id="@+id/downloadBTN"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/x10dp"
        android:layout_marginTop="@dimen/x20dp"
        android:layout_toLeftOf="@+id/cancelBTN"
        android:scaleType="center"
        android:src="@drawable/ic_file_download_white_24dp"
        android:tint="@color/witkey_orange" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />


</RelativeLayout>