<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x45dp"
    android:background="@color/witkey_dim_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/IndexBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x20dp"
        android:layout_marginRight="@dimen/x20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:id="@+id/goLiveBottomOpt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x0dp"
                android:scaleType="center"
                android:src="@drawable/go_live_icon1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goLiveBottomOpt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x0dp"
                android:scaleType="center"
                android:src="@drawable/go_live_icon2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goLiveBottomOpt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x0dp"
                android:scaleType="center"
                android:src="@drawable/go_live_icon3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goLiveBottomOpt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x0dp"
                android:scaleType="center"
                android:src="@drawable/go_live_icon4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goLiveBottomOpt5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x0dp"
                android:scaleType="center"
                android:src="@drawable/go_live_icon5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goLiveBottomOpt6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x0dp"
                android:scaleType="center"
                android:src="@drawable/go_live_icon6" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>