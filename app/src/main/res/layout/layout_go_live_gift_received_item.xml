<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mGiftReceivedParentFrame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/giftReceivedParentFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <app.witkey.live.utils.customviews.CustomTextView
            android:id="@+id/giftReceivedTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:textColor="@color/witkey_dark_brown"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/giftReceivedImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/giftReceivedTimeLeft"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/x5dp" />

    </RelativeLayout>


</RelativeLayout>