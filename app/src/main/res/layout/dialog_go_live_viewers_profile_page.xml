<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/mProfileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/x2dp"
                android:src="@drawable/user_place_holder_round" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <app.witkey.live.utils.customviews.CustomTextView
                    android:id="@+id/userProfileNameTV"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/x3dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="@string/centiped_boy"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <app.witkey.live.utils.customviews.CustomTextView
                    android:id="@+id/userProfileIDTV"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x3dp"
                    android:layout_weight="1"
                    android:text="@string/witkey_id_3521794"
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userLevelIV"
                    android:layout_width="@dimen/x30dp"
                    android:layout_height="@dimen/x30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_level_1_9" />

                <app.witkey.live.utils.customviews.CustomTextView
                    android:id="@+id/profileRankTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:text="EARTH 1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30dp"
                android:layout_marginRight="@dimen/x30dp"
                android:layout_marginTop="@dimen/x10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x20dp"
                        android:layout_height="@dimen/x20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/guestuser" />

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/userDollarParent"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x20dp"
                        android:layout_height="@dimen/x20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/dollar" />

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:id="@+id/userDollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="@dimen/x20dp"
                        android:layout_height="@dimen/x20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/chip" />

                    <app.witkey.live.utils.customviews.CustomTextView
                        android:id="@+id/userChips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/social_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20dp"
                android:layout_marginRight="@dimen/x20dp"
                android:layout_marginTop="@dimen/x15dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3dp"
                android:paddingTop="@dimen/x3dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnFollow"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="@dimen/x30dp"
                    android:layout_marginLeft="@dimen/x20dp"
                    android:layout_marginRight="@dimen/x20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded_corners"
                    android:paddingBottom="@dimen/x3dp"
                    android:paddingTop="@dimen/x3dp"
                    android:text="+ Follow"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnGuestLive"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="@dimen/x30dp"
                    android:layout_marginLeft="@dimen/x20dp"
                    android:layout_marginRight="@dimen/x20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border_rounded_corners"
                    android:paddingBottom="@dimen/x3dp"
                    android:paddingTop="@dimen/x3dp"
                    android:text="@string/guest_live"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/witkey_orange"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x15dp"
                android:background="@color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>