<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="5dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/animation_person_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="left|center"
        android:background="@drawable/bullet_giftlayout"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/gift_userheader_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:src="@drawable/user_place_holder_round" />

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5dp"
            android:layout_toRightOf="@id/gift_userheader_iv"
            android:orientation="vertical"
            android:paddingRight="@dimen/x5dp">

            <app.witkey.live.utils.customviews.CustomTextView
                android:id="@+id/gift_usernickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:maxLength="25"
                android:text="Title"
                android:textColor="@color/witkey_orange"
                android:textSize="12sp" />

            <app.witkey.live.utils.customviews.CustomTextView

                android:id="@+id/gift_usersign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="25"
                android:text="Text Here Bla "
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/animation_gift"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/textContainer" />
    </RelativeLayout>


    <app.witkey.live.utils.animations.giftbullet.StrokeTextView
        android:id="@+id/animation_num"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignRight="@+id/animation_person_rl"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="-50dp"
        android:gravity="center"
        android:text="x 1"
        android:textColor="@color/witkey_orange"
        android:textSize="24sp"
        app:innnerColor="@color/witkey_orange"
        app:outerColor="@color/witkey_orange" />

    <ImageView
        android:id="@+id/animation_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/animation_person_rl"
        android:layout_marginRight="-45dp"
        android:src="@drawable/light_star_anim" />

</RelativeLayout>












