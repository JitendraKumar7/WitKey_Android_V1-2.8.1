<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp">

    <Button
        android:id="@+id/btnShareBroadcast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x50dp"
        android:layout_marginRight="@dimen/x50dp"
        android:layout_marginTop="@dimen/x30dp"
        android:background="@drawable/button_large_rounded_corners"
        android:text="@string/share_broadcast_to_friends"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInviteFriends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x50dp"
        android:layout_marginRight="@dimen/x50dp"
        android:layout_marginTop="@dimen/x20dp"
        android:background="@drawable/button_large_rounded_corners"
        android:text="@string/invite_friends_to_broadcast"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30dp" />
</LinearLayout>



