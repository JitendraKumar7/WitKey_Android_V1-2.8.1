<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadius="0dp"
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/witkey_orange_lite" />
            <stroke
                android:width="1dp"
                android:color="@color/witkey_yellow" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:drawable="@drawable/mic_"
        android:left="5dp"
        android:right="5dp"
        android:top="3dp" />
</layer-list>

