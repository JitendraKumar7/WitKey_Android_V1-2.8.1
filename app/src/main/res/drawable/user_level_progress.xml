<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:endColor="@color/witkey_progress_bar_background"
                android:startColor="@color/witkey_progress_bar_background" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="oval">
                <corners android:radius="5dp" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/witkey_orange"
                    android:startColor="@color/witkey_orange" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="90dp" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/witkey_orange"
                    android:startColor="@color/witkey_orange" />
            </shape>
        </clip>
    </item>
</layer-list>