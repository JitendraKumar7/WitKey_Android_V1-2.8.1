<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/gradient_center_transparent" android:endColor="@color/gradient_end_transparent" android:startColor="@color/gradient_start_transparent" android:type="linear" />
            <stroke android:width="@dimen/x2dp" android:color="@color/witkey_orange" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>